                        </dt>
                        <dd class = "col-sm-10">
                            @Html.DisplayFor(model => model.Puntaje)
                        </dd>
                    </dl>
    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="TallerId" />
                        <div class="form-actions no-color">
                            <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
