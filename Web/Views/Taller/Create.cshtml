@model TallerViewModel

@{
    ViewData["Title"] = "Nuevo Taller";
    string objName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <form asp-action="Create">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Nombre" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Nombre" class="form-control" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnioApertura" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="AnioApertura" class ="form-control" />
                                <span asp-validation-for="AnioApertura" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Direccion" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Direccion" class="form-control" />
                                <span asp-validation-for="Direccion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="LocalidadId" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <select asp-for="LocalidadId" class ="form-control" asp-items="ViewBag.LocalidadId"></select>
                                <span asp-validation-for="LocalidadId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Telefono" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Telefono" class="form-control" />
                                <span asp-validation-for="Telefono" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Email" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Activo" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <input asp-for="Activo" type="checkbox" class="check-box" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                                <input type="submit" value="Crear" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
