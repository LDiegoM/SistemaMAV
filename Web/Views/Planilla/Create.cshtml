@model PlanillaViewModel

@{
    ViewData["Title"] = "Nueva Planilla de Mantenimiento";
    string objName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <form asp-action="Create">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="ModeloId" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <select asp-for="ModeloId" class ="form-control" asp-items="ViewBag.ModeloId"></select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Detalle" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Detalle" class="form-control" />
                                <span asp-validation-for="Detalle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="AnioFabricacion" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="AnioFabricacion" class="form-control" />
                                <span asp-validation-for="AnioFabricacion" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Version" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Version" class="form-control" />
                                <span asp-validation-for="Version" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Activo" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <input asp-for="Activo" type="checkbox" class="check-box" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                                <input type="submit" value="Crear" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
