@model MantenimientoViewModel

@{
    ViewData["Title"] = "Modificar el Mantenimiento realizado en la fecha " + Model.Fecha;
    string objName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MantenimientoId" />
                        <input type="hidden" asp-for="VehiculoId" />
                        <input type="hidden" asp-for="PlanillaId" />
                        <div class="form-group">
                            <label asp-for="VehiculoDetalle" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="VehiculoDetalle" class="form-control" readonly />
                                <span asp-validation-for="VehiculoDetalle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="TallerId" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <select asp-for="TallerId" class="form-control select2" asp-items="ViewBag.TallerId"></select>
                                <span asp-validation-for="TallerId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Fecha" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Fecha" class="form-control" />
                                <span asp-validation-for="Fecha" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Kilometros" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Kilometros" class="form-control" />
                                <span asp-validation-for="Kilometros" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Precio" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Precio" class="form-control" />
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $("#TallerId").select2();
    });
</script>
