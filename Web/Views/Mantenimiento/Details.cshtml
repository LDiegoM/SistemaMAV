@model MantenimientoViewModel

@{
    ViewData["Title"] = "Detalles del Mantenimiento realizado en la fecha " + Model.Fecha;
    string objName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Vehiculo)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.VehiculoDetalle)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Vehiculo.Patente)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Vehiculo.Patente)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Taller)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Taller.Nombre)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Fecha)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Fecha)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Kilometros)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Kilometros)
                    </dd>
                    <dt class="col-sm-3">
                        @Html.DisplayNameFor(model => model.Precio)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Precio)
                    </dd>
                </dl>
                <p>
                    <a class="btn btn-primary" href="/@Html.Raw(objName)/Edit/@Html.Raw(Model.MantenimientoId)" title="Modificar"><span class="glyphicon glyphicon-pencil" style="margin-right: 5px;"></span>Modificar</a>
                    <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                </p>
            </div>
        </div>
    </div>
</div>
