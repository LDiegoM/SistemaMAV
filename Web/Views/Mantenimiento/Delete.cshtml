@model MantenimientoViewModel

@{
    ViewData["Title"] = "Eliminar el Mantenimiento realizado en la fecha " + Model.Fecha;
    string objName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <h4>Confirma eliminar el Ã­tem?</h4>
                <div>
                    <dl class="row">
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Vehiculo)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.VehiculoDetalle)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Vehiculo.Patente)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Vehiculo.Patente)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Taller)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Taller.Nombre)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Fecha)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Fecha)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Kilometros)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Kilometros)
                        </dd>
                        <dt class="col-sm-3">
                            @Html.DisplayNameFor(model => model.Precio)
                        </dt>
                        <dd class="col-sm-9">
                            @Html.DisplayFor(model => model.Precio)
                        </dd>
                    </dl>
    
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="MantenimientoId" />
                        <div class="form-actions no-color">
                            <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                            <input type="submit" value="Eliminar" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
