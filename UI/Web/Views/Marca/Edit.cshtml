@model SistemaMAV.UI.Web.Models.MarcaViewModel

@{
    ViewData["Title"] = "Modificar la Marca " + Model.Detalle;
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <form asp-action="Edit">
                    <div class="form-horizontal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="MarcaId" />
                        <div class="form-group">
                            <label asp-for="Detalle" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <input asp-for="Detalle" class="form-control" />
                                <span asp-validation-for="Detalle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Activo" class="control-label col-md-2"></label>
                            <div class="col-md-10">
                                <div class="checkbox">
                                    <input asp-for="Activo" type="checkbox" class="check-box" />
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <a class="btn btn-default" href="/Marca/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                                <input type="submit" value="Guardar" class="btn btn-primary" />
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
