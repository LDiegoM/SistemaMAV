@model SistemaMAV.UI.Web.Models.ModeloViewModel

@{
    ViewData["Title"] = "Detalles del Modelo " + Model.Detalle;
    string objName = this.ViewContext.RouteData.Values["controller"].ToString();
}

<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">@ViewBag.Title</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <dl class="row">
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Detalle)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Detalle)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.Marca)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.Marca.Detalle)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.TipoUnidad)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.TipoUnidad.Detalle)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaAlta)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FechaAlta)
                    </dd>
                    <dt class = "col-sm-2">
                        @Html.DisplayNameFor(model => model.FechaBaja)
                    </dt>
                    <dd class = "col-sm-10">
                        @Html.DisplayFor(model => model.FechaBaja)
                    </dd>
                </dl>
                <p>
                    <a class="btn btn-primary" href="/@Html.Raw(objName)/Edit/@Html.Raw(Model.ModeloId)" title="Modificar"><span class="glyphicon glyphicon-pencil" style="margin-right: 5px;"></span>Modificar</a>
                    <a class="btn btn-default" href="/@Html.Raw(objName)/Index" title="Volver"><span class="glyphicon glyphicon-arrow-left" style="margin-right: 5px;"></span>Volver</a>
                </p>
            </div>
        </div>
    </div>
</div>
